<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_pressed_style"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="2dip">

    <ImageView
        android:id="@+id/iv_toolbar_item_devider"
        android:layout_width="2dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.widget.ImageView
            android:id="@+id/pv_toolbar_item"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/tv_toolbar_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" android:textSize="12sp"
            android:textColor="@color/blue" />
    </LinearLayout>
</LinearLayout>
